{
  "name": "iot-tracking-server",
  "version": "1.0.0",
  "description": "Node.js server for ESP32-based IoT tracking system with SIM800L GSM and NEO6M GPS modules",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "setup": "node scripts/install.js",
    "test-api": "node scripts/test-api.js",
    "docker:build": "docker build -t iot-tracking-server .",
    "docker:run": "docker run -p 3000:3000 --env-file .env iot-tracking-server",
    "docker:compose": "docker-compose up -d --build",
    "docker:down": "docker-compose down",
    "logs": "docker-compose logs -f iot-server",
    "lint": "echo 'Add ESLint configuration if needed'",
    "format": "echo 'Add Prettier configuration if needed'"
  },
  "keywords": ["iot", "tracking", "esp32", "gps", "mongodb", "nodejs"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.19.2",
    "mongoose": "^8.3.2",
    "joi": "^17.12.3",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.2.0",
    "rate-limit-redis": "^4.2.0",
    "redis": "^4.6.13",
    "dotenv": "^16.4.5",
    "winston": "^3.13.0",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-slow-down": "^2.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}